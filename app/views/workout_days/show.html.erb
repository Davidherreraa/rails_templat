<div class="max-w-xl mx-auto p-6 bg-white rounded-xl shadow-md">
  <h1 class="text-3xl font-bold mb-6">Workout for <%= @workout_day.day %></h1>

  <%= form_with model: @workout_day, url: workout_day_path(@workout_day), method: :patch do |f| %>
    <div class="grid grid-cols-1 gap-4">
      <% @exercises.each do |exercise| %>
        <label class="flex items-center space-x-2">
          <%= check_box_tag "exercise_ids[]", exercise.id, @workout_day.exercises.include?(exercise) %>
          <span><%= exercise.name %></span>
        </label>
      <% end %>
    </div>
    <div class="mt-6">
      <%= f.submit "Save Workout", class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600" %>
    </div>
  <% end %>
</div>
